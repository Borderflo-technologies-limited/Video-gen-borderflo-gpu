# Video Generation Service Environment Variables

# Service Configuration
HOST=0.0.0.0
PORT=8001
DEBUG=false
LOG_LEVEL=INFO

# Model Configuration
MODEL_PATH=models/wav2lip_gan.pth
DEVICE=cuda  # or cpu for local testing

# Processing Configuration
IMG_SIZE=96  # 96 for fast, 288 for high quality
WAV2LIP_BATCH_SIZE=128
FPS=25.0

# File Storage
TEMP_DIR=temp
MAX_FILE_SIZE=104857600  # 100MB in bytes

# Allowed File Types
ALLOWED_AUDIO_TYPES=["audio/wav", "audio/mp3", "audio/mpeg"]
ALLOWED_IMAGE_TYPES=["image/jpeg", "image/jpg", "image/png"]
ALLOWED_VIDEO_TYPES=["video/mp4", "video/avi", "video/mov"]

# Cleanup Configuration
AUTO_CLEANUP_HOURS=24
CLEANUP_INTERVAL_MINUTES=60

# GPU Configuration (for RunPod)
CUDA_VISIBLE_DEVICES=0
NVIDIA_VISIBLE_DEVICES=all

# RunPod Specific
RUNPOD_POD_ID=${RUNPOD_POD_ID}
RUNPOD_POD_NAME=${RUNPOD_POD_NAME}
RUNPOD_API_KEY=${RUNPOD_API_KEY} 