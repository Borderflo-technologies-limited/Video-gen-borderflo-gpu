# RunPod Production Environment
# Copy this to .env when deploying to RunPod

# Service Configuration
HOST=0.0.0.0
PORT=8001
DEBUG=false
LOG_LEVEL=INFO

# GPU Configuration for RunPod
DEVICE=cuda

# Model Configuration
MODEL_PATH=models/wav2lip_gan.pth
DEFAULT_VIDEO_PATH=models/default_face.mp4

# Processing Configuration
IMG_SIZE=96
WAV2LIP_BATCH_SIZE=128
FPS=25.0

# File Storage
TEMP_DIR=temp
MAX_FILE_SIZE=104857600

# Cleanup Configuration  
AUTO_CLEANUP_HOURS=24
CLEANUP_INTERVAL_MINUTES=60
