# Video Generation Service Environment Variables
# Server Settings
HOST=0.0.0.0
PORT=8002
DEBUG=false

# Model Paths
WAV2LIP_MODEL_PATH=./models/wav2lip_gan.pth
WAV2LIP_CHECKPOINT_PATH=./Wav2Lip/checkpoints

# Processing Settings
MAX_VIDEO_DURATION=300  # 5 minutes
SUPPORTED_AUDIO_FORMATS=wav,mp3,m4a
SUPPORTED_VIDEO_FORMATS=mp4,avi,mov

# CPU Server Communication
CPU_SERVER_URL=http://localhost:8000
API_KEY=your_video_service_api_key_here

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/video_generation.log

# Resource Limits
MAX_CONCURRENT_PROCESSES=2
GPU_MEMORY_LIMIT=0.8  # 80% of GPU memory
